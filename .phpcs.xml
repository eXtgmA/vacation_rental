<?xml version="1.0"?>
<ruleset name="WEB42 code style">
    <description>Rules for our web application</description>

    <!-- Specify standard(s) -->
    <arg name="standard" value="PSR2" />

    <rule ref="PSR2">
        <exclude name="PSR2.Files.ClosingTag.NotAllowed"/>
        <exclude name="PSR1.Files.SideEffects"/>
        <exclude name="Generic.Files.LineLength"/>
        <exclude-pattern>*\.js</exclude-pattern>

        <!--    configure same line brace -->
        <!--        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine" />-->
    </rule>
    <exclude-pattern>./public/fa/css/all.min.css</exclude-pattern>

    <!--    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />-->

    <!-- Specify files or directories to check -->
    <file>src</file>
    <file>public</file>
</ruleset>
